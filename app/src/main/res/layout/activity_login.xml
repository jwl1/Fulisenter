<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.ucai.fulisenter.controller.activity.RegisterActivity"
    android:id="@+id/activity_new_good"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ease_timestampe_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="账户登录"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            />
        <ImageView
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#fff"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="fill_vertical">
        <TextView
            android:text="用户名"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="#fff"/>
        <EditText
            android:id="@+id/etUserName"
            android:textSize="18sp"
            android:drawableRight="@drawable/icon_account"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:background="#fff"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="fill_vertical">
        <TextView
            android:text="密码"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/etpassword"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:drawableRight="@drawable/icon_pwd"
            android:background="#fff"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        android:textSize="18sp"
        android:background="@drawable/btn_bg_orange"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="免费注册"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="设置服务端的ip地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF1C1FDA"/>

    </RelativeLayout>

</LinearLayout>
